
nav[data-tuktuk=menu] > a
  font-size: 15px
  //& small
  //  font-size: font-size-tiny
  //  margin-left: 0.4em
  color white
  & .icon
    //display: inline-block
    //width: AIR
    //margin-right: (AIR/2)
    display block
    margin 0 auto
    font-size 2em
    color white

section, header, footer
  & nav[data-tuktuk=menu] > a
    //line-height: 2.5em
    line-height: 2em
    padding: 0 AIR
    display: inline-block
    &:not(:first-child)
      margin-left: (AIR / 2)

[data-tuktuk=boxes] aside
  & nav[data-tuktuk=menu]
    margin: (AIR / 2)
    & > a
      display: block
      padding: (AIR / 1.5) (AIR / 2)
