@import "__constants.styl"
@import url('http://fonts.googleapis.com/css?family=Capriola');
//@import url(http://fonts.googleapis.com/css?family=Artifika); Artifika
//@import url(http://fonts.googleapis.com/css?family=Marko+One); Marko One
//@import url(http://fonts.googleapis.com/css?family=Quando);

/* ====================== THEME ====================== */
THEME       = #1ABC9C
/* ====================== BUTTONS ====================== */
SECONDARY   = #BFBFBF
SUCCESS     = #EE6557
ALERT       = #E74C3C
/* ========== COLOR & BACKGROUNDS ====================== */
LIGHT       = #f7f7f7
DARK        = #282828
COLOR       = #34495e

BLACK       = #000
WHITE       = #fff
YELLOW      = #F5D908
ORANGE      = #E44D26
GRAY        = #929292
SKY         = #00A3EE
GREEN       = #17A768
PINK        = #D80351
BLUE        = #33559E
BROW        = #2C1E1E
PURPLE      = #501D50
TURQUIOSE   = #1FC7FF
LIME        = #A3E629

/* OTHERS */
TRANSITION      = 400ms
BORDER-RADIUS   = 8px


body
  color: COLOR
  font-size: 14px
  font-family: "Capriola", "Helvetica Neue", Helvetica, Arial, sans-serif
  font-weight: normal
  background: WHITE

  &:not(.color):not(.dark) a
    color: COLOR
    &:not(.button):hover, &:not(.button):active
      color: THEME

  & hr
    margin: 15px 0
    background: LIGHT
    background-color: rgba(0,0,0,0.1)

  & .radius
    border-radius: BORDER-RADIUS

  /* ====================== NAVIGATION ====================== */
  & nav[data-tuktuk=menu] > a
    border-radius (BORDER-RADIUS / 2)
    &:hover
      background-color: rgba(0,0,0,0.05)
    &.active
      color: COLOR
      background-color: rgba(0,0,0,0.1)
      & .icon
        color: THEME
    &:not(.active):not(:hover) > .icon, & small
      opacity: 0.6
      font-weight: 400

  .bck.color, .bck.dark
    & nav[data-tuktuk=menu] > a
      &:hover
        background-color: rgba(0,0,0,0.07)
      &.active
        background-color: rgba(0,0,0,0.15)

  /* ====================== BACKGROUNDS ====================== */
  & .bck
    &.light
      background-color: LIGHT
    &.color
      background-color: COLOR
    &.dark
      background-color: DARK
    &.theme
      background-color: THEME
    &.alert
      background-color: ALERT !important
    &.black
      background-color: BLACK
    &.white
      background-color: WHITE
    &.yellow
      background-color: YELLOW
    &.orange
      background-color: ORANGE
    &.gray 
      background-color: GRAY
    &.sky
      background-color: SKY
    &.green
      background-color: GREN
    &.pink
      background-color: PINK
    &.blue
      background-color: BLUE
    &.brow 
      background-color: BROW
    &.purple 
      background-color: PURPLE
    &.turquiose
      background-color: TURQUIOSE 
    &.lime 
      background-color: LIME
    &.theme, &.alert
      color: WHITE

    &.color, &.dark
      color: lighten(COLOR, 75%)
      & hr
        background: lighten(COLOR, 10%)
        background: rgba(0,0,0,0.2)
      & a
        color: WHITE
        &.active
          color: WHITE !important


  /* ================================= TEXT ================================ */
  & .text
    &.shadow
      text-shadow 0 1px 1px rgba(0,0,0,0.5)
  & .color
    &.white
      color: WHITE !important
    &.theme
      color: THEME !important
    &.default
      color: COLOR !important

  /* ====================== FORM ====================== */
  & form, .form
    FORM_BORDER = #dce4ec
    & input[type="text"], input[type="password"], input[type="date"], input[type="datetime"], input[type="email"], input[type="number"], input[type="search"], input[type="tel"], input[type="time"], input[type="url"], select, textarea
      background-color: WHITE
      color: COLOR
      border: 2px solid FORM_BORDER
      border-radius BORDER-RADIUS
      transition border-color TRANSITION
      &.error, &:required
        border-color: ALERT !important
        color: ALERT
      &:focus
        border-color: THEME

    & .select:after
      color: FORM_BORDER

     & input[type="checkbox"], input[type="radio"]
      background: WHITE
      border: 2px solid FORM_BORDER
      &:checked
        border-color: THEME
        &:after
          color: THEME
     & input[type="checkbox"]
      border-radius BORDER-RADIUS


  & [data-control="checkbox"]
    RADIUS = BORDER-RADIUS * 5
    background: darken(LIGHT, 25%)
    color: darken(LIGHT, 5%)
    font-weight: 700
    border-radius: RADIUS
    & label
      border-radius: RADIUS
      background: darken(LIGHT, 50%)
    &.checked
      background-color: THEME
      color: WHITE !important
      & label
        background-color: darken(THEME, 25%)

  /* ====================== TABLE ====================== */
  & table
    background: WHITE
    color: COLOR
    border: 1px solid lighten(COLOR, 75%)
    border-radius BORDER-RADIUS
    & tr
      &:nth-child(even) td
        background-color: lighten(COLOR, 95%)
    & th
      background-color: lighten(COLOR, 75%)
      color: WHITE
    & td
      &.highlight
        background-color: THEME !important
        color: WHITE

  /* ====================== BUTTONS ====================== */
  & .button, button
    color: white !important
    font-weight: 600
    &:not(.transparent)
      background-color: THEME
      border-radius BORDER-RADIUS
      box-shadow: inset 0 -2px 0 rgba(0,0,0,0.2), 0 1px 2px rgba(0,0,0,0.2)
      &:hover
        box-shadow: inset 0 0 128px rgba(255,255,255,0.2), inset 0 -2px 0 rgba(0,0,0,0.1), 0 1px 2px rgba(0,0,0,0.2)
      &:active
        box-shadow inset 0 0 128px rgba(0,0,0,0.1),  inset 0 1px 0 rgba(0,0,0,0.1)
      &.secondary
        background-color: darken(SECONDARY, 25%)
        color: SECONDARY
       &.success
        background-color: SUCCESS
       &.alert
        background-color: ALERT

    &.transparent
      background: none !important

    &.large
      font-weight: 500


  & div.img
    background: LIGHT

  /* ====================== TAGs ====================== */
  & :not(.icon).tag
    color: WHITE !important
    border: solid 1px rgba(0,0,0,0.1)
    border-radius 2px


[data-tuktuk="modal"]
  & header
    background: THEME !important
    color: WHITE


[data-tuktuk=boxes]
  /* ====================== ASIDE ====================== */
  & aside
    background: WHITE
    color: lighten(COLOR, 15%)
    & header
      box-shadow: inset 0 -1px 0 rgba(0,0,0,0.1)

  /* ====================== MENU ====================== */
  & aside [data-menu] > a:not(.button)
    border-radius (BORDER-RADIUS / 2)
    &.active
      background: THEME
      color: WHITE

