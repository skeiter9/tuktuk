/* ========================= HEADING ========================= */
h1, h2, h3, h4, h5, h6
  margin: 0
  padding: 0
  line-height: 1.2em

  & a
    font-weight: inherit

  & .right
    font-size: 1.0em

  & .icon
    font-size: 0.85em

h1
  font-size: 2.6em !important
h2
  font-size: 2.2em !important
h3
  font-size: 1.8em !important
h4
  font-size: 1.6em !important
h5
  font-size: 1.3em !important
h6
  font-size: 1.0em !important
.title
  font-size: 2.6em !important


/* ========================= TEXT ========================= */
.text
  &.thin
    font-weight: 200
  &.book
    font-weight: 300
  &.normal
    font-weight: 400
  &.bold
    font-weight: 700
  &.italic
    font-style: italic
  &.underline
    border-bottom: 1px solid
  &.left
    text-align: left
  &.right
    text-align: right
  &.center
    text-align: center
  &.justify
    text-align: justify
  &.small
    font-size: 0.8em
  &.big
    font-size: 1.2em
  &.extra-big
    font-size: 2.6em
/* ========================= BASIC ELEMENTS ========================= */
p
  font-size: s = 1.1em
  line-height: s
small
  font-size: size = 0.85em
  line-height: size
